{
  "name": "darts-overlay",
  "version": "1.0.0",
  "description": "Local offline darts scoreboard + OBS broadcast overlay system",
  "main": "darts-overlay/server/server.js",
  "scripts": {
    "start": "node darts-overlay/server/server.js",
    "dev": "node darts-overlay/server/server.js",
    "test": "jest",
    "test:ci": "jest --ci --coverage --maxWorkers=2",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint darts-overlay/server darts-overlay/control",
    "lint:fix": "eslint darts-overlay/server darts-overlay/control --fix",
    "format": "prettier --write \"**/*.{js,json,md}\"",
    "format:check": "prettier --check \"**/*.{js,json,md}\"",
    "build:check": "node -e \"console.log('âœ“ Build check passed')\"",
    "quality": "npm run format:check && npm run lint && npm run test:ci",
    "lighthouse": "node scripts/lighthouse.js",
    "smoke-test": "node scripts/smoke-test.js",
    "prepare": "command -v husky >/dev/null 2>&1 && husky install || true"
  },
  "keywords": [
    "darts",
    "501",
    "overlay",
    "obs",
    "broadcast",
    "scoreboard"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "ws": "^8.14.2"
  },
  "devDependencies": {
    "@babel/preset-env": "^7.28.6",
    "babel-jest": "^30.2.0",
    "eslint": "^8.57.1",
    "husky": "^8.0.3",
    "jest": "^30.2.0",
    "jest-environment-jsdom": "^30.2.0",
    "jsdom": "^27.4.0",
    "lighthouse": "^11.7.1",
    "lint-staged": "^15.5.2",
    "prettier": "^3.8.1"
  },
  "lint-staged": {
    "*.js": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md}": [
      "prettier --write"
    ]
  }
}
